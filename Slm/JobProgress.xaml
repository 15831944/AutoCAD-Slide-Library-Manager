<Window x:Class="Autodesk.ADN.Slm.JobProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slm Job Progress"
		Height="165" Width="470"
		Top="150" Left="0"
		Style="{DynamicResource MayaStyle}"
		Icon="Images/Slm.ico"
		WindowStyle="None"
		ResizeMode="NoResize"
		Cursor="Wait" Loaded="Window_Loaded"
		>
	<Grid>
		<ProgressBar x:Name="progressBar" Margin="10,66,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" IsIndeterminate="True" />
		<Label x:Name="progressMsg" Content="Loading and Generating slide badges" Margin="10,126,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" HorizontalContentAlignment="Center" RenderTransformOrigin="0.846,-1.077" Width="Auto" Height="19" />
	</Grid>
</Window>
